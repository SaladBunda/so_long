SRCS= map.c util_fs.c util_functions.c get_next_line.c map_parsing.c main.c
DIR=./srcs/
OBJS=$(patsubst %.c,$(DIR)%.o,$(SRCS)) 
CC = cc
CFLAGS = -Wall -Wextra -Werror -I.
# IFLAGS = -lmlx -framework OpenGL -framework AppKit
NAME = so_long

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $^ -o $(NAME)

%.o.: %.c so_long.h
	$(CC) $(SRCS) -c

clean:
	rm -rf $(OBJS)

fclean: clean
	rm -rf $(NAME)

re: fclean all